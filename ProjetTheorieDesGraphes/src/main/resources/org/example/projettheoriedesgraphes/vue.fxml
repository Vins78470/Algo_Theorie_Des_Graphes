<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="860.0" prefWidth="1430.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Controller"
      style="-fx-background-color: #f0f2f5; -fx-font-family: 'Segoe UI', sans-serif;">

    <!-- MenuBar stylée et arrondie -->
    <MenuBar prefHeight="45.0" style="
    -fx-background-color: #1f2937;
    -fx-background-radius: 15;
    -fx-border-radius: 15;
    -fx-padding: 5;
    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0.5, 0, 1);
">
        <menus>
            <Menu mnemonicParsing="false" text="Charger un graphe" style="
    -fx-font-weight: bold;
    -fx-font-size: 15px;
    -fx-background-color: white;
    -fx-background-radius: 12;
    -fx-padding: 5 20 5 20;
">
                <items>
                    <MenuItem fx:id="IdOpenGraph" mnemonicParsing="false" onAction="#onOpenGraphClicked"
                              text="Open Graph..."
                              style="
                              -fx-text-fill: white;
                              -fx-background-color: #3b82f6;
                              -fx-background-radius: 12;
                              -fx-font-weight: bold;
                              -fx-font-size: 14px;
                              -fx-padding: 6 20 6 20;
                          "
                    />
                </items>
            </Menu>
        </menus>
    </MenuBar>





    <!-- SplitPane principal -->
    <SplitPane fx:id="mainSplitPane" dividerPositions="0.6" VBox.vgrow="ALWAYS" style="-fx-background-color: #ecf0f1;">
        <items>

            <!-- Canvas Panel -->
            <AnchorPane fx:id="canvasAnchorPane" minWidth="300.0" minHeight="300.0"
                        style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 8;">
                <children>
                    <Canvas fx:id="graphCanvas" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
                </children>
            </AnchorPane>

            <!-- Panel de contrôle -->
            <VBox fx:id="rightPanel" spacing="12" minWidth="280.0"
                  style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 8;">

                <children>
                    <Text text="Algorithme :" style="-fx-font-weight: bold; -fx-fill: #2c3e50; -fx-font-size: 14;"/>
                    <ComboBox fx:id="algorithmComboBox" prefHeight="45.0" prefWidth="280.0" promptText="Choisir un algorithme"
                              style="-fx-background-color: #ecf0f1; -fx-border-radius: 6; -fx-background-radius: 6;"/>

                    <Text text="Départ :" style="-fx-font-weight: bold; -fx-fill: #2c3e50; -fx-font-size: 14;"/>
                    <ComboBox fx:id="startComboBox" prefHeight="40.0" prefWidth="280.0" promptText="Départ"
                              style="-fx-background-color: #ecf0f1; -fx-border-radius: 6; -fx-background-radius: 6;"/>

                    <Text text="Arrivée :" style="-fx-font-weight: bold; -fx-fill: #2c3e50; -fx-font-size: 14;"/>
                    <ComboBox fx:id="endComboBox" prefHeight="40.0" prefWidth="280.0" promptText="Arrivée"
                              style="-fx-background-color: #ecf0f1; -fx-border-radius: 6; -fx-background-radius: 6;"/>

                    <Button fx:id="executeButton" mnemonicParsing="false" onAction="#onExecuteClicked" text="Exécuter"
                            prefHeight="45.0" prefWidth="280.0"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

                    <Text text="Étapes :" style="-fx-font-weight: bold; -fx-fill: #2c3e50; -fx-font-size: 14;"/>
                    <TextArea fx:id="stepsTextArea" editable="false" prefHeight="220.0" VBox.vgrow="ALWAYS"
                              style="-fx-background-color: #ecf0f1; -fx-border-radius: 6; -fx-background-radius: 6;"/>

                    <Text text="Résultat :" style="-fx-font-weight: bold; -fx-fill: #2c3e50; -fx-font-size: 14;"/>
                    <TextArea fx:id="resultTextArea" editable="false" prefHeight="150.0" VBox.vgrow="ALWAYS"
                              style="-fx-background-color: #ecf0f1; -fx-border-radius: 6; -fx-background-radius: 6;"/>
                </children>
            </VBox>
        </items>
    </SplitPane>
</VBox>
