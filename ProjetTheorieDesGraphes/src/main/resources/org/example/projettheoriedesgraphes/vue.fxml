<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.lang.String?>
<VBox prefHeight="860.0" prefWidth="1430.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Controller">

    <children>
        <MenuBar prefHeight="25.0" prefWidth="1461.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="IdOpenGraph" mnemonicParsing="false"
                                  onAction="#onOpenGraphClicked" text="Open a Graph" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Canvas fx:id="graphCanvas" height="893.0" layoutY="7.0" width="1116.0"
                        AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="410.0" AnchorPane.topAnchor="7.0" />

                <!-- ComboBox pour choisir l'algorithme -->
                <ComboBox fx:id="algorithmComboBox" layoutX="1250.0" layoutY="60.0"
                          prefHeight="60.0" prefWidth="154.0" promptText="Algorithmes">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Parcours en profondeur (DFS)" />
                            <String fx:value="Parcours en largeur (BFS)" />
                            <String fx:value="Kruskal" />
                            <String fx:value="Prim" />
                            <String fx:value="Dijkstra" />
                            <String fx:value="Bellman-Ford" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Button fx:id="executeButton" layoutX="1250.0" layoutY="173.0"
                        mnemonicParsing="false" onAction="#onExecuteClicked"
                        prefHeight="51.0" prefWidth="143.0" text="Executer" />

                <Text layoutX="1183.0" layoutY="308.0" scaleX="2.0" scaleY="2.0"
                      strokeType="OUTSIDE" strokeWidth="0.0" text="Etapes :" />

                <TextArea fx:id="stepsTextArea" editable="false" layoutX="1135.0"
                          layoutY="329.0" prefHeight="205.0" prefWidth="391.0" />

                <Text layoutX="1178.0" layoutY="584.0" scaleX="2.0" scaleY="2.0"
                      strokeType="OUTSIDE" strokeWidth="0.0" text="RÃ©sultat :" />

                <TextArea fx:id="resultTextArea" editable="false" layoutX="1135.0"
                          layoutY="607.0" prefHeight="51.0" prefWidth="304.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
